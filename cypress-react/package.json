{
  "name": "cypress-cra",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@vitejs/plugin-react": "^4.2.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "vite": "^5.1.1"
  },
  "scripts": {
    "dev": "vite --host --port 3001",
    "dev:wait": "start-test dev 3001",
    "cy:open": "cross-env NODE_ENV=test pnpm run dev:wait \"cypress open\"",
    "cy:run": "cross-env NODE_ENV=test pnpm run dev:wait \"cypress run\"",
    "build": "tsc && vite build",
    "preview": "vite preview"
  },
  "eslintConfig": {
    "extends": [
      "react-app"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@cypress/code-coverage": "^3.12.22",
    "@types/node": "^20.11.17",
    "@types/react": "^18.2.55",
    "@types/react-dom": "^18.2.19",
    "cross-env": "^7.0.3",
    "cypress": "^13.6.4",
    "start-server-and-test": "^2.0.3",
    "typescript": "^4.9.5"
  }
}
